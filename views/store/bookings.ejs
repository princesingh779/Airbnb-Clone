<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bookings</title>
    <link rel="stylesheet" href="/css/main.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <style>
      .booking-container {
        max-width: 900px;
        margin: 40px auto;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(255, 77, 77, 0.08);
        padding: 32px 24px;
      }
      .booking-title {
        color: #ff4d4d;
        text-align: center;
        margin-bottom: 28px;
        font-size: 2rem;
        font-weight: bold;
        letter-spacing: 1px;
      }
      .booking-list {
        width: 100%;
        border-collapse: collapse;
      }
      .booking-list th,
      .booking-list td {
        padding: 14px 10px;
        border-bottom: 1px solid #ffeaea;
        text-align: left;
      }
      .booking-list th {
        background: #fff0f5;
        color: #d63384;
        font-weight: 600;
      }
      .booking-list tr:last-child td {
        border-bottom: none;
      }
      .no-bookings {
        text-align: center;
        color: #888;
        font-size: 1.1rem;
        margin-top: 24px;
      }

      @media (max-width: 900px) {
        .booking-container {
          padding: 32px 12px;
        }
      }
    </style>
  </head>
  <body>
    <%- include('../partials/nav')%>
    <div class="booking-container">
      <div class="booking-title">My Bookings</div>
      <% if (bookings && bookings.length > 0) { %>
      <table class="booking-list">
        <thead>
          <tr>
            <th>Place</th>
            <th>Date</th>
            <th>Guests</th>
            <th>Price</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% bookings.forEach(function(booking) { %>
          <tr>
            <td><%= booking.placeName %></td>
            <td><%= booking.date %></td>
            <td><%= booking.guests %></td>
            <td>$<%= booking.price %></td>
            <td>
              <% if (booking.status === 'confirmed') { %>
              <span style="color: #22c55e; font-weight: 600">Confirmed</span>
              <% } else { %>
              <span style="color: #f59e42; font-weight: 600">Pending</span>
              <% } %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } else { %>
      <div class="no-bookings">You have no bookings yet.</div>
      <% } %>
    </div>

    <%- include('../partials/footer') %>
  </body>
</html>
